//            г==============================================┐
//            │  Universal config for QUAKE    by VooDoo.38  │
//            L==============================================-

 unbindall
 cd Off
 noexit 0

// = Стандартные установки клавиш
 Bind "tab"         "+showscores"
 Bind "`"           "toggleconsole"
 Bind "="           "sizeup"
 Bind "-"           "sizedown"
 Bind "F1"          "help"
 Bind "F10"         "menu_quit"
 Bind "F11"         "zoom_in"
 Bind "F12"         "screenshot"
 Bind "Pause"       "pause"

// = Установки управления
 Bind "r"            "+forward"
 Bind "f"            "+back"
 Bind "d"            "+moveleft"
 Bind "g"            "+moveright"
 Bind "space"            "+jump"
 Bind "alt"            "+movedown"
 Bind "z"            "+snipe"
 Bind "."            "stop"

// Bind "BackSpace"    "kill"
 Bind "mouse1"       "+attack"
 Bind "mouse2"       "impulse 8"
 Bind "s"            "impulse 10"

// = Быстрый разворот
 alias turn "host_framerate 0.03; wait; cl_yawspeed 12000; +left; wait; -left; cl_yawspeed 140; host_framerate 0"

// = Увеличение
 alias +snipe "fov 110; wait; fov 55.00; wait; fov 20.00; sensitivity 1.5; wait;"
 alias -snipe "fov 55.00; wait; fov 70.00; wait; fov 90.00; sensitivity 5.5; wait;"

// = Установки передвижения
 cl_bob                 "0.004"
 cl_bobcycle         "0.6"
 cl_rollangle          "0.7"
 v_kickpitch          "0"
 v_kickroll             "0"
 v_kicktime           "0"
 r_waterwarp        "0"
 sv_idealpitchscale "0"

// = Установки мышки
 +mlook
 sv_aim            "2"
 m_pitch           "-0.028"
 sensitivity        "5.5"
 crosshair         "1"
 m_filter           "1"

// = Оружие
 alias imp_1 "impulse 1; alias prev imp_1"
 alias imp_2 "impulse 2; alias prev imp_2"
 alias imp_3 "impulse 3; alias prev imp_3"
 alias imp_4 "impulse 4; alias prev imp_4"
 alias imp_5 "impulse 5; alias prev imp_5"
 alias imp_6 "impulse 6; alias prev imp_6"
 alias imp_7 "impulse 7; alias prev imp_7"
 alias imp_8 "impulse 8; alias prev imp_8"
 Bind "1"    "imp_1"
 Bind "2"    "imp_2"
 Bind "3"    "imp_3"
 Bind "4"    "imp_4"
 Bind "5"    "imp_5"
 Bind "6"    "imp_6"
 Bind "7"    "imp_7"
 Bind "8"    "imp_8"
 alias prev imp_2

 Bind "e"     "imp_6"
 Bind "t" "imp_7"
 Bind "h"     "imp_5"  // Hammer 226
 Bind "s"    "imp_3"

// = Раскраска
 color              "176"
 _cl_color          "176"
 hostname           "VooDoo.38 Zaruba"
 name               "VяяDяя.38"

// = Установка скорости
 cl_backspeed    "1000"  (400)
 cl_forwardspeed "1000"  (200)
 cl_sidespeed    "1000"  (350)
 cl_upspeed      "1000"
 cl_yawspeed     "1000"
 scr_conspeed    "3000"  (320)
 scr_centertime  "1.5"   (2)
 con_notifytime  "2.5"   (3)
 sv_accelerate   "10"    (10)

// = sound & video
 bgmbuffer             "900"  // буфер для фоновой музыки
 precache              "0"    // Включает/выключает использование буфера (0/1)
 r_drawviewmodel       "0"
 showpause             "0"
 showram               "0"
 showturtle            "0"
_snd_mixahead          "0.1"
 bgmvolume             "1"
 volume                "0.3"
 viewsize              "75"
_windowed_mouse        "1"
 vid_stretch_by_2      "1"
 vid_config_y          "600"
 vid_config_x          "800"
_vid_default_mode_win  "0"
_vid_default_mode      "1"
_vid_wait_override     "1"
 vid_nopageflip        "0"
 vid_mode              "3"
 gamma                 "0.49"

