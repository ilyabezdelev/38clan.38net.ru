//            Universal config for QUAKE    by Trouble[FAq]

 cd Off
 unbindall
 noexit 1

// bind "del"  "host_framerate 0.005"
// bind "home" "host_framerate 0.1"
// bind "end"  "host_framerate 0"
// bind "ins"  "host_framerate 0.000001"

// ═ Стандартные установки клавиш
 Bind "tab"         "+showscores"
 Bind "`"           "toggleconsole"
 Bind "="           "sizeup"
 Bind "-"           "sizedown"
 Bind "F1"          "help"
 Bind "F2"          "menu_save"
 Bind "F3"          "menu_load"
 Bind "F4"          "menu_options"
 Bind "F5"          "menu_multiplayer"
 Bind "F6"          "tr_save"
 Bind "F7"          "tr_load"
 Bind "F10"         "menu_quit"
 Bind "F11"         "zoom_in"
 Bind "F12"         "screenshot"
 Bind "Pause"       "pause"

//   saving/load
 alias tr_save "echo Trouble's Quicksaving...; wait; save trouble"
 alias tr_load "echo Trouble's Quickloading...; wait; load trouble"

// ═ Установки управления
 Bind "r"            "+forward"
 Bind "f"            "+back"
 Bind "d"            "+moveleft"
 Bind "g"            "+moveright"
 Bind "q"            "+moveup"
 Bind "w"            "+movedown"
 Bind "a"            "imp_3"
 Bind "o"            "stop"
 Bind "mouse1"       "+attack"
 Bind "mouse2"       "+jump"
 Bind "mouse3"       "+keyjump"
 Bind "s"            "impulse 10"
 Bind "z"            "+keyjump"

// ═ Высокий jump
 alias +keyjump      "impulse 7;  wait; +attack; wait; +jump;"
 alias -keyjump      "-attack;-jump; prev"

// ═ Увеличение
 alias +snipe "fov 55.00; wait; fov 20.00; sensitivity 1.5; wait;"
 alias -snipe "fov 55.00; wait; fov 90.00; sensitivity 6; wait;"

// ═ Установки передвижения
 cl_bob             "0.004"
 cl_bobcycle        "0.9"
 cl_rollangle       "0.7"
 v_kickpitch        "0"
 v_kickroll         "0"
 v_kicktime         "0"
 r_waterwarp        "0"

// ═ Установки мышки
 d_mipcap          "0" 
 d_mipscale        "1" 
 m_filter          "1"
 +mlook
 sv_aim            "2"
 m_pitch           "-0.028"
 sensitivity       "5"
 crosshair         "1"

// ═ Оружие
 alias imp_1 "impulse 1; alias prev imp_1"
 alias imp_2 "impulse 2; alias prev imp_2"
 alias imp_3 "impulse 3; alias prev imp_3"
 alias imp_4 "impulse 4; alias prev imp_4"
 alias imp_5 "impulse 5; alias prev imp_5"
 alias imp_6 "impulse 6; alias prev imp_6"
 alias imp_7 "impulse 7; alias prev imp_7"
 alias imp_8 "impulse 8; alias prev imp_8"
 Bind "1"    "imp_1"
 Bind "2"    "imp_2"
 Bind "3"    "imp_3"
 Bind "4"    "imp_4"
 Bind "5"    "imp_5"
 Bind "6"    "imp_6"
 Bind "7"    "imp_7"
 Bind "8"    "imp_8"
 alias prev imp_2

 Bind "e"     "imp_6"
 Bind "space" "imp_7"
 Bind "t"     "imp_8"
 Bind "y"     "imp_2"
 Bind "h"     "imp_2;wait;imp_4;wait;imp_5;wait;imp_3"

// ═ Раскраска
 _cl_color          "176"
 hostname           "Time of TroubLes"
