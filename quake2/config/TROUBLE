//For sound config
bind . vup
bind , vdn
alias vup volume_4
alias vdn volume_2
alias volume_0  "volume 0;    alias vup volume_05;                      echo |-------------------- 0"
alias volume_05 "volume 0.05; alias vup volume_1;  alias vdn volume_0;  echo -|------------------- 0.5"
alias volume_1  "volume 0.1;  alias vup volume_15; alias vdn volume_05; echo --|------------------ 1"
alias volume_15 "volume 0.15; alias vup volume_2;  alias vdn volume_1;  echo ---|----------------- 1.5"
alias volume_2  "volume 0.2;  alias vup volume_25; alias vdn volume_15; echo ----|---------------- 2"
alias volume_25 "volume 0.25; alias vup volume_3;  alias vdn volume_2;  echo -----|--------------- 2.5"
alias volume_3  "volume 0.3;  alias vup volume_35; alias vdn volume_25; echo ------|-------------- 3"
alias volume_35 "volume 0.35; alias vup volume_4;  alias vdn volume_3;  echo -------|------------- 3.5"
alias volume_4  "volume 0.4;  alias vup volume_45; alias vdn volume_35; echo --------|------------ 4"
alias volume_45 "volume 0.45; alias vup volume_5;  alias vdn volume_4;  echo ---------|----------- 4.5"
alias volume_5  "volume 0.5;  alias vup volume_55; alias vdn volume_45; echo ----------|---------- 5"
alias volume_55 "volume 0.55; alias vup volume_6;  alias vdn volume_5;  echo -----------|--------- 5.5"
alias volume_6  "volume 0.6;  alias vup volume_65; alias vdn volume_55; echo ------------|-------- 6"
alias volume_65 "volume 0.65; alias vup volume_7;  alias vdn volume_6;  echo -------------|------- 6.5"
alias volume_7  "volume 0.7;  alias vup volume_75; alias vdn volume_65; echo --------------|------ 7"
alias volume_75 "volume 0.75; alias vup volume_8;  alias vdn volume_7;  echo ---------------|----- 7.5"
alias volume_8  "volume 0.8;  alias vup volume_85; alias vdn volume_75; echo ----------------|---- 8"
alias volume_85 "volume 0.85; alias vup volume_9;  alias vdn volume_8;  echo -----------------|--- 8.5"
alias volume_9  "volume 0.9;  alias vup volume_95; alias vdn volume_85; echo ------------------|-- 9"
alias volume_95 "volume 0.95; alias vup volume_10; alias vdn volume_9;  echo -------------------|- 9.5"
alias volume_10 "volume 1;                         alias vdn volume_95; echo --------------------| 10"

